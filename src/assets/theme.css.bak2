:root {
  /* Colores de Vuetify ya expuestos */
  --primary:    #191043;
  --secondary:  #0557c1;
  --accent:     #032284;
  --error:      #ff5252;
  --info:       #888888;
  --success:    #5beb51;
  --warning:    #ffe082;
  --background: #f8f5f5;
  --surface:    #f4f6fa;
  --menubar:    #191043;
  --card-bg:    #ffffff;

  /* Tonos usados en tablas y formularios */
  --table-row-1-bg: #ffffff;
  --table-row-2-bg: #f4fafe;
  --table-row-3-bg: #f7f5f5;
  --search-field-bg: #f4fafe;
  --action-button-bg: #b9c8ea;
  --action-button-text: #191043;
  --slider-track-bg: #dbe1e5;

  /* Pantallas de login y reset */
  --login-bg: #f5f5f5;
  --login-card-bg: #ffffff;
  --forgot-link-hover: #b3d7ff;
  --forgot-link-shadow: #ffffff33;

  /* Interruptor tema claro/oscuro */
  --switch-track: #f3f3f3;
  --switch-focus-shadow: #ffe06650;
  --switch-sun: #FFD600;
  --switch-moon: #B0CBF9;

  /* Colores de paneles y tarjetas */
  --home-border-pend: #ffb300;
  --home-border-crit: #e53935;
  --home-border-rot:  #1e88e5;
  --home-border-dio:  #8e24aa;

  --vaciar-azul:  #ef8194;
  --vaciar-verde: #c9bae5;
  --vaciar-rojo:  #6d3b94;

  /* Timeline y chips de seguimiento */
  --estado-pendiente:  #c81e2b;
  --estado-preparada:  #f8b421;
  --estado-despachada: #2d8bba;
  --estado-entregado:  #4caf50;
  --estado-neutral-bg: #e0e0e0;
  --estado-neutral-tx: #616161;

  /* Colores para tarjetas de stock - Tema Claro */
  --stock-total: #4faeed;          /* Azul celeste para stock total */
  --stock-posicionado: #0eb222;     /* Verde para stock posicionado */
  --stock-sin-posicionar: #db8017;  /* Naranja para stock sin posicionar */
  --stock-comprometido: #ad1602;    /* Rojo para stock comprometido */
  --stock-text: #f1fafd;  /* Color de texto para las tarjetas - Azul claro */            /* Color de texto para las tarjetas */
}

.theme--dark {
  /* Paleta oscura de Vuetify */
  --primary:    #212124;
  --secondary:  #2A2D2E;
  --accent:     #313437;
  --error:      #FF6B6B;
  --info:       #B0B3B8;
  --success:    #5beb51;
  --warning:    #E6B800;
  --background: #2f2f2f;
  --surface:    #232526;
  --menubar:    #212124;
  --card-bg:    #232526;
  
  /* Colores para tarjetas de stock - Tema Oscuro */
  --stock-total: #4faeed;          /* Azul celeste para stock total */
  --stock-posicionado: #0eb222;     /* Verde para stock posicionado */
  --stock-sin-posicionar: #db8017;  /* Naranja para stock sin posicionar */
  --stock-comprometido: #ad1602;    /* Rojo para stock comprometido */
  --stock-text: #f1fafd;  /* Color de texto para las tarjetas - Azul claro */            /* Color de texto para las tarjetas */

  /* Ajustes de tablas y formularios en oscuro */
  --table-row-1-bg: #ffffff;
  --table-row-2-bg: #f7f5f5;
  --table-row-3-bg: #f4fafe;
  --search-field-bg: #d9d9d9;
  --action-button-bg: #d8ecfa;
  --action-button-text: #212124;

  --login-bg: #2f2f2f;
  --login-card-bg: #232323;

  --switch-track: #23232a;
}
